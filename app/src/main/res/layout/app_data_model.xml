<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp">


    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/image_size_default"
        android:layout_height="@dimen/image_size_default"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_size_default"
        android:layout_toEndOf="@id/app_icon"
        android:layout_marginLeft="@dimen/margin_from_image_default"
        android:layout_marginRight="@dimen/margin_from_image_default"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        />

    <!--Spinner
        android:id="@+id/notify_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/app_checked"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:spinnerMode="dropdown"/ -->

    <CheckBox
        android:id="@+id/app_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
