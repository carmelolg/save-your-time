<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaveYourTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="toolbarStyle">@style/Theme.SaveYourTime.Toolbar</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/SYTColorPrimary</item>
        <item name="colorPrimaryVariant">?attr/SYTColorPrimary</item>
        <item name="colorOnPrimary">?attr/SYTColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/SYTColorSecondary</item>
        <item name="colorSecondaryVariant">?attr/SYTColorSecondary</item>
        <item name="colorOnSecondary">?attr/SYTColorOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/SYTPanelBackgroundColor</item>
        <!-- Customize your theme here. -->

        <item name="SYTPanelBackgroundColor">@color/first</item>
        <item name="SYTPanelTextColor">@color/white</item>
        <item name="SYTChartBarColor">@color/fourth</item>
        <item name="SYTChartSecondBarColor">@color/third</item>
        <item name="SYTColorPrimary">@color/first</item>
        <item name="SYTColorOnPrimary">@color/white</item>
        <item name="SYTColorSecondary">@color/second</item>
        <item name="SYTColorOnSecondary">@color/white</item>
        <item name="SYTColorTertiary">@color/third</item>
        <item name="SYTFloatingButtonBackground">@color/first</item>
        <item name="SYTFloatingButtonForeground">@color/white</item>
        <item name="SYTHistoryStatsPanelBackgroundColor">@color/fourth</item>
        <item name="SYTHistoryStatsPanelTextColor">@color/white</item>
        <item name="SYTDividerColor">@color/first</item>
        <item name="SYTHighlightColor">@color/fifth</item>
        <item name="SYTBackgroundColor">@color/white</item>
        <item name="SYTProgressBarColor">?attr/SYTColorTertiary</item>


    </style>

    <style name="Theme.SaveYourTime.Chart.ColumnStyle.ShapeStyle">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="Theme.SaveYourTime.Chart.ColumnStyle">
        <item name="shapeStyle">@style/Theme.SaveYourTime.Chart.ColumnStyle.ShapeStyle</item>
    </style>

    <style name="Theme.SaveYourTime.Chart.Column1" parent="@style/Theme.SaveYourTime.Chart.ColumnStyle">
        <item name="color">?attr/SYTChartBarColor</item>
        <item name="thickness">12dp</item>
    </style>


    <style name="Theme.SaveYourTime.Chart.Column2" parent="@style/Theme.SaveYourTime.Chart.ColumnStyle">
        <item name="color">?attr/SYTChartSecondBarColor</item>
        <item name="thickness">12dp</item>
    </style>

    <style name="Theme.SaveYourTime.Chart">
        <item name="column1">@style/Theme.SaveYourTime.Chart.Column1</item>
        <item name="column2">@style/Theme.SaveYourTime.Chart.Column2</item>
    </style>

    <style name="Theme.SaveYourTime.ProgressBar">
        <item name="colorAccent">?attr/SYTProgressBarColor</item>
    </style>


    <style name="Theme.SaveYourTime.Toolbar">
        <item name="titleTextColor">?attr/SYTColorOnPrimary</item>
    </style>

    <style name="Theme.SaveYourTime.Table">
    </style>

    <style name="Theme.SaveYourTime.Table.Header">
        <item name="android:textColor">@color/first</item>
    </style>

    <style name="Theme.SaveYourTime.Table.Row">
        <item name="android:textColor">@color/second</item>
    </style>


</resources>